{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "PatchKit Apps API",
        "contact": {
            "name": "API Support",
            "url": "http://patchkit.net/contact",
            "email": "contact@patchkit.net"
        }
    },
    "host": "api.patchkit.net",
    "paths": {
        "/1/apps/{app_secret}/changelog": {
            "get": {
                "summary": "Gets changelog",
                "parameters": [
                    {
                        "name": "app_secret",
                        "in": "path",
                        "description": "Secret of an application.",
                        "required": true,
                        "type": "string"
                    }
                ],
                "tags": [
                    "App"
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "version_id": {
                                        "type": "integer",
                                        "format": "int32",
                                        "description": "Internal version id",
                                        "minimum": 1
                                    },
                                    "version_label": {
                                        "type": "string",
                                        "description": "Human readable label"
                                    },
                                    "changes": {
                                        "type": "string",
                                        "description": "Changes description"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Application not found"
                    }
                }
            }
        },
        "/1/apps/{app_secret}/versions": {
            "get": {
                "summary": "Gets versions info",
                "parameters": [
                    {
                        "name": "app_secret",
                        "in": "path",
                        "description": "Secret of an application.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "api_key",
                        "in": "query",
                        "required": false,
                        "type": "string",
                        "description": "Application owner API key"
                    }
                ],
                "tags": [
                    "App",
                    "Version"
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/VersionInfo"
                        }
                    }
                }
            },
            "post": {
                "summary": "Creates file",
                "consumes": [
                    "multipart/form-data"
                ],
                "parameters": [
                    {
                        "name": "app_secret",
                        "in": "path",
                        "description": "Secret of an application.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "api_key",
                        "in": "query",
                        "required": true,
                        "type": "string",
                        "description": "Application owner API key"
                    },
                    {
                        "name": "label",
                        "in": "formData",
                        "required": true,
                        "type": "string",
                        "description": "New version label"
                    },
                    {
                        "name": "changelog",
                        "in": "formData",
                        "required": false,
                        "type": "string",
                        "description": "Description of changes"
                    }
                ],
                "tags": [
                    "App",
                    "Version"
                ],
                "responses": {
                    "201": {
                        "description": "Version created successfully.",
                        "schema": {
                            "$ref": "#/definitions/VersionInfo"
                        }
                    },
                    "403": {
                        "description": "API key invalid or draft version already exists."
                    },
                    "404": {
                        "description": "Application not found."
                    }
                }
            }
        },
        "/1/apps/{app_secret}/versions/{version_id}/content_file": {
            "put": {
                "summary": "Updates file",
                "consumes": [
                    "multipart/form-data"
                ],
                "parameters": [
                    {
                        "name": "app_secret",
                        "in": "path",
                        "description": "Secret of an application.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "version_id",
                        "in": "path",
                        "description": "Initial version id",
                        "required": true,
                        "type": "integer",
                        "format": "int32"
                    },
                    {
                        "name": "api_key",
                        "in": "query",
                        "required": true,
                        "type": "string",
                        "description": "Application owner API key"
                    },
                    {
                        "name": "file",
                        "in": "formData",
                        "required": true,
                        "type": "file",
                        "description": "Zip file with application content"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "File queued to be processed",
                        "schema": {
                            "$ref": "#/definitions/JobInfo"
                        }
                    },
                    "403": {
                        "description": "Invalid secret or version is not a draft version."
                    },
                    "404": {
                        "description": "Version not found"
                    }
                },
                "tags": [
                    "App",
                    "Version"
                ]
            }
        },
        "/1/apps/{app_secret}/versions/{version_id}/diff_file": {
            "put": {
                "summary": "Updates diff file",
                "consumes": [
                    "multipart/form-data"
                ],
                "parameters": [
                    {
                        "name": "app_secret",
                        "in": "path",
                        "description": "Secret of an application.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "version_id",
                        "in": "path",
                        "description": "Initial version id",
                        "required": true,
                        "type": "integer",
                        "format": "int32"
                    },
                    {
                        "name": "api_key",
                        "in": "query",
                        "required": true,
                        "type": "string",
                        "description": "Application owner API key"
                    },
                    {
                        "name": "file",
                        "in": "formData",
                        "required": true,
                        "type": "file",
                        "description": "Zip file with application binary diffs"
                    },
                    {
                        "name": "diff_summary",
                        "in": "formData",
                        "required": false,
                        "type": "string",
                        "description": "Required when diff_file is set. Using diff summary format."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "File queued to be processed",
                        "schema": {
                            "$ref": "#/definitions/JobInfo"
                        }
                    },
                    "403": {
                        "description": "Invalid secret or version is not a draft version."
                    },
                    "404": {
                        "description": "Version not found"
                    }
                },
                "tags": [
                    "App",
                    "Version"
                ]
            }
        }
    },
    "definitions": {
        "JobInfo": {
            "type": "object",
            "properties": {
                "job_guid": {
                    "type": "string",
                    "description": "Job GUID to be used with Jobs API"
                }
            }
        },
        "VersionInfo": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int32",
                    "minimum": 1,
                    "description": "Initial version id"
                },
                "label": {
                    "type": "string",
                    "description": "Version label"
                },
                "changelog": {
                    "type": "string",
                    "description": "Description of changes"
                },
                "publish_date": {
                    "type": "integer",
                    "format": "int64",
                    "description": "Unix timestamp of publish date"
                },
                "content_guid": {
                    "type": "string",
                    "description": "Guid of content file"
                },
                "diff_guid": {
                    "type": "string",
                    "description": "Guid of diff file or null if there's no diff"
                },
                "draft": {
                    "type": "boolean",
                    "description": "Set to true if this version is a draft version"
                }
            }
        }
    }
}
